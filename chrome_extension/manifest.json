{
  "manifest_version": 3,
  "name": "DDAS - Duplication Alert System",
  "version": "1.0",
  "description": "Alerts users before downloading a file that may already exist.",
  "permissions": [
    "downloads",
    "notifications"
  ],
  "host_permissions": [
    "http://127.0.0.1:5000/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}